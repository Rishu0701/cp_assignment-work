//Q30.swap two number by using pointers and function.
//ans.
#include<stdio.h>
 void swap (int *x ,int *y){
    int temp ;
   temp = *x;
   *x = *y;
   *y = temp;
    return ;

}

  int main(){
    int a,b;
    printf("Enter the first number :");
    scanf("%d",&a);
    printf("Enter the second number :");
    scanf("%d",&b);

    swap(&a ,& b);
    printf("%d\n",a);
    printf("%d",b);

    return 0;

  }







