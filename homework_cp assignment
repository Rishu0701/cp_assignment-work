//Q32. Write a program in C to count the total number of alphabets, digits and special characters in a string.
//ans.
#include <stdio.h>

int main() {
    char str[100];  
    int i, alphabets = 0, digits = 0, specials = 0;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);  

    for (i = 0; str[i] != '\0'; i++) {
       
        if ((str[i] >= 'A' && str[i] <= 'Z') || (str[i] >= 'a' && str[i] <= 'z')) {
            alphabets++;
        }
    
        else if (str[i] >= '0' && str[i] <= '9') {
            digits++;
        }
    
        else if (str[i] != ' ' && str[i] != '\t' && str[i] != '\n') {  
            specials++;
        }
    }

    printf("Alphabets: %d\n", alphabets);
    printf("Digits: %d\n", digits);
    printf("Special characters: %d\n", specials);

    return 0;
}




//Q33.Write c code to accept two nxn matrices A and B and print the output C = 2*A + 3*B.
//ans.
//matrix solve
#include <stdio.h>

int main() {
    int n;

    printf("\nEnter the size : ");
    scanf("%d", &n);

    int A[n][n], B[n][n], C[n][n];

    printf("Enter elements  A:  ");
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            scanf("%d", &A[i][j]);

    printf("Enter elements  B:");
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            scanf("%d", &B[i][j]);


for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            C[i][j] = 2 * A[i][j] + 3 * B[i][j];

    
    printf("Matrix C = 2*A + 3*B:\n");
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++){
            printf("\n%d \t", C[i][j]);
            //printf("\t ");
        }
    
    }

    return 0;
}



//Q34.Write a C program to input elements in array and print all negative elements.
//ans.
#include<stdio.h>
int main ()
{
    int n ;
      printf("Enter the number of element in the array:  ");
      scanf("%d",&n);

   int  arr[n];

   printf("Enter the %d element\n",n);
   for ( int i=0 ; i<n ; i++){
            printf("Enter elements  :");
            scanf("%d",&arr[i]);
   }
   
   printf(" negative elements are : ");
   for (int i=0; i<n ;i++){
      if (arr[i]<0){

    printf("%d\n",arr[i]);}

   }
   return 0;
}






































